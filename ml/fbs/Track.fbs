include "Metadata.fbs";
include "Properties.fbs";

namespace rs.ml.core;

attribute "alias";

struct Int { value:long; }
struct Bool { value:bool; }
union Value { bool:Bool, int:Int, str:string }

table CustomEntry
{
  key:string (key);
  value:Value;
}

